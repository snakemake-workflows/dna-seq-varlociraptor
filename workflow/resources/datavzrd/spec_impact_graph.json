{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "width": 200,
    "data": {
        "name": "scores"
    },
    "transform": [
        {
            "window": [
                {
                    "op": "row_number",
                    "as": "haplotype"
                }
            ]
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "haplotype",
                    "type": "ordinal",
                    "title": "Haplotype"
                },
                "x": {
                    "field": "score",
                    "type": "quantitative",
                    "scale": {
                        "domain": [0, 1]
                    },
                    "title": "Score"
                },
                "color": {
                    "field": "sample",
                    "type": "nominal",
                    "legend": {
                        "title": "Sample"
                    }
                },
                "tooltip": [
                    {
                        "field": "haplotype"
                    },
                    {
                        "field": "sample"
                    },
                    {
                        "field": "score"
                    },
                    {
                        "field": "frequency"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "tick",
                "color": "black",
                "thickness": 2,
                "size": 20
            },
            "encoding": {
                "y": {
                    "field": "haplotype",
                    "type": "ordinal"
                },
                "x": {
                    "field": "frequency",
                    "type": "quantitative",
                    "scale": {
                        "domain": [0, 1]
                    },
                    "title": "Haplotype Frequency"
                }
            }
        }
    ]
}
