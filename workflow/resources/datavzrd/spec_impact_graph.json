{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "data": {
        "name": "table"
    },
    "mark": {
        "type": "tick",
        "thickness": 2.5
    },
    "encoding": {
        "x": {
            "field": "score",
            "type": "quantitative",
            "scale": { "domain": [0, 1] }
        },
        "color": {
            "field": "sample",
            "type": "nominal",
            "legend": { "title": "Sample" }
        },
        "opacity": {
            "field": "likelihood",
            "type": "quantitative",
            "scale": { "domain": [0, 1] }
        }
    }
}
